nogood.c--有错误的程序
#include<stdio.h>
int main(void)
{
	int n, n2, n3;
	n = 5;
	n2 = n*n;
	n3 = n2*n;
	printf("when n is %d,n squard=%d,n cubed=%d\n", n, n2, n3);
	return 0;

}
#include<stdio.h>
#define DAYS_PER_YEAR 365
int main()
{
	/*int n, n1;
	n = 19;
	n1 = n * 365;
		printf("my age is %d years and %d days\n", n, n1);*/
	int days, ages;
	ages = 19;
	days = ages*DAYS_PER_YEAR;
		printf("your age is %d,and it is %d days\n", ages, days);
	return 0;
}
platinum.c--your weight is platinum 
#include<stdio.h>
int main(main)
{
	float weight;
	float value;
	printf("Are you worth your weight in platinum?\n");
	printf("let's check it out.\n");
	printf("please enter your weight in pounds:");

		scanf("%f", &weight);
	value = 1700.0*weight*14.5833;
	printf("your weight in platinum is worth $%.4f.\n",value);
	printf("you are easily worth that!If platinum prices drop,\n");
	printf("eat more to manitain your value.\n");
	return 0;

} 
