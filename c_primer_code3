//basc.c 用十进制、八进制、十六进制打印
int main(void)
{ int x = 100;
printf("dec=%d;octal=%o;hex=%x\n", x, x, x);
printf("dec=%d;octal=%#o;hex=%#x\n", x, x, x);
return 0;
}

打印转义序列
#include<stdio.h>
int main(void)
{char nerf =' \n';
printf("%c",nerf);
return 0; }

charcode.c
#include<stdio.h>
int main(void)
{
	char ch;

	printf("please enter a character.\n");
	scanf("%c", &ch);
	printf("the code for %c is %d.\n", ch, ch);
	return 0;
}
